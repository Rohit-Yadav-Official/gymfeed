{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonJS",
    "strict": true,
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true
  },
  "ts-node": {
    "transpileOnly": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}